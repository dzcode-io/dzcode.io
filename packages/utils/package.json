{
  "name": "@dzcode.io/utils",
  "description": "utility functions and types",
  "version": "1.0.0",
  "author": {
    "email": "contact@zakiii.com",
    "name": "Zakaria Mansouri",
    "url": "https://zakiii.com/"
  },
  "devDependencies": {
    "@dzcode.io/tooling": "*"
  },
  "license": "MIT",
  "lint-staged": {
    "*.*": [
      "yarn lint:eslint --fix",
      "yarn lint:prettier --write"
    ]
  },
  "main": "dist",
  "private": true,
  "scripts": {
    "build": "yarn lerna run build:alone --scope=@dzcode.io/utils --include-dependencies --stream",
    "build:alone": "tsc",
    "clean": "rimraf dist",
    "lint": "yarn lint:eslint . && yarn lint:prettier --check .",
    "lint:eslint": "eslint --config ../tooling/.eslintrc.json --ignore-path ../tooling/.eslintignore --report-unused-disable-directives",
    "lint:prettier": "prettier  --config ../tooling/.prettierrc.json --ignore-path ../tooling/.prettierignore --loglevel warn"
  }
}
