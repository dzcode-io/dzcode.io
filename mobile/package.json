  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "repository": "https://github.com/dzcode-io/dzcode.io.git"
  },
  "scripts": {
    "build": "lerna run build:alone --scope=@dzcode.io/mobile --include-dependencies --stream",
    "build:alone:watch": "tsc --watch --preserveWatchOutput",
    "build:android": "expo build:android --no-wait -t app-bundle",
    "build:ios": "expo build:ios --no-wait -t archive",
    "build:production": "yarn build:ios --release-channel production && yarn build:android --release-channel production",
    "build:stage": "yarn build:ios --release-channel stage && yarn build:android --release-channel stage",
    "build:watch": "lerna run build:alone:watch --scope=@dzcode.io/mobile --include-dependencies --parallel",
    "clean": "lerna run clean:alone --scope=@dzcode.io/mobile --include-dependencies --stream",
    "clean:alone": "rimraf .expo dist",
    "lint": "yarn build && yarn lint:alone",
    "lint:alone": "yarn lint:eslint . && yarn lint:prettier --check .",
    "lint:eslint": "eslint --config ../packages/tooling/.eslintrc.json --ignore-path ../packages/tooling/.eslintignore --report-unused-disable-directives",
    "lint:prettier": "prettier  --config ../packages/tooling/.prettierrc.json --ignore-path ../packages/tooling/.prettierignore --loglevel warn",
    "start:dev": "expo start",
    "test": "yarn build && yarn test:alone",
    "test:alone": "jest --rootDir .",
    "test:watch": "npm-run-all build --parallel build:watch \"test:alone --watch {@}\" --"
  }
}
